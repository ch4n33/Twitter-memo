{
  "name": "twitter memo",
  "description": "Track anyone on Twitter and make notes on their profile.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo_16.png"
  },
  "permissions": [
    "tabs",
    "activeTab", 
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://twitter.com/*"
      ]
    }
  ]
}