{
  "name": "twitter memo",
  "description": "Track anyone on Twitter and make notes on their profile.",
  "version": "0.0.3",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logos/16.png"
  },
  "icons": {
    "128": "logos/128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ]
}